<div class="hometab box">
<div class="container">
<div id="tabs" class="htabs">
	<div class="box-heading"><span class="sub-title">new collection</span>{{ heading_title }}</div>
  <ul class='etabs'>
	<li class='tab'>
		{% if latestproducts %}
			<a href="#tab-latest">{{ tab_latest }}</a>
		{% endif %}
	</li>
	<li class='tab'>
		{% if bestsellersproducts %}
		<a href="#tab-bestseller">{{ tab_bestseller }}</a>
		{% endif %}
	</li>	
	<li class='tab'>
		{% if specialproducts %}
			<a href="#tab-special">{{ tab_special }}</a>
		{% endif %}
	</li>
	</ul>
 </div>
{% if bestsellersproducts %}
